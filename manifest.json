{
  "manifest_version": 2,
  "name": "ASM-Fill",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "coffee.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_updated.js"]
    }
  ]
}
